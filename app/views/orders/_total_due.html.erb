
<h4 class="text-left">Order Details</h4>
<ul class="list-group">
  <li class="list-group-item row list-group-item-info">
    <div class="col-md-3">Product Name</div>
    <div class="col-md-3">Quantity</div>
    <div class="col-md-3">Unit Price</div>
    <div class="col-md-3">Total Price</div>

  </li>
    <% @order.order_items.each do |order_item| %>
      <%= render 'order_items', :order_item => order_item %>
    <% end %>

  <li class="list-group-item row text-right">
    <div class="col-md-6"></div>
    <div class="col-md-3">Subtotal:</div>
    <div class="col-md-3"><%= number_to_currency @order.subtotal %></div>
  </li>
  <li class="list-group-item row text-right">
    <div class="col-md-6"></div>
    <div class="col-md-3">Tax: </div>
    <div class="col-md-3 "> <%= number_to_currency @order.tax %></div>
  </li>
  <li class="list-group-item row text-right">
    <div class="col-md-3"></div>
    <div class="col-md-6">Total Due: </div>
    <div class="col-md-3"><%= number_to_currency @order.total %></div>
  </li>
</ul>
