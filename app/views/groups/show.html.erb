  <h3 style="text-align: center;"><b><%= @group.description %></b></h3>
</p>
-->

<p>
  <% if @group.image_file_name.present? %>
  <%= image_tag @group.image.url, :size => :med %>
  <% end %>
</p>

<h3 class="text-center">Products</h3>
<%#= render @group.products %>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
        <% @group.products.each do |product| %>
        <%= render "products/product", :product => product, :order_item =>@order_item %>
        <% end %>
    </div>
  </div>

<% if is_admin %>
<%= link_to 'Edit', edit_group_path(@group) %>
<%= link_to 'Back', groups_path %>
<%= link_to 'Add Product', new_product_path %>
<% end %>
