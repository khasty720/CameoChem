<div class="form">
  <%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this category from being saved:</h2>

    <ul>
      <% @contact.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :message %><br>
    <%= f.text_area :message, class: 'form-control' %>
  </div>
  <div class="hidden">
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %>
  </div>
  <div class="actions">
    <%= f.submit "Send Message", :class => "btn btn-default", 'data-disable-with' => "Please wait.." %>
  </div>
  <% end %>
</div>
