<div class="container">
  <div class="row">
    <h3>Product Groups</h3>
    <div class="column">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @category.groups.each do |group| %>
          <tr>
            <%= render 'groups/group', :group => group %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
